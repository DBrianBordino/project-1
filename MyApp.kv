
<MyBoxLayout>:
    orientation: 'vertical'
    spacing: 20
    padding: 20
    size_hint_y: None
    height: 200  # Establece la altura deseada aquí

    
    BoxLayout:
        orientation: 'horizontal'
        spacing: 20

        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: '100dp'

            Button:
                id: boton_inicio
                text: 'Inicio'
                size_hint: None, None
                size: '100dp', '100dp'
                on_press: app.registrar_inicio()

            Label:
                id: hora_inicio
                text: ''
                font_size: '20dp'
                halign: 'center'
                valign: 'middle'
                size_hint_y: None
                height: '40dp'

        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: '100dp'


            SwitchLanzamiento:
                id: switch_lanzamiento
                active: True 
                on_active: app.habilitar_botones(self.active)
                halign: 'center'
                valign: 'middle'
                size_hint_y: None
                pos_hint: {'center_x': 0.3, 'top': 0.8}

            Button:
                id: boton_fin
                text: 'Fin'
                size_hint: None, None
                size: '100dp', '100dp'
                on_press: app.registrar_fin()

            Label:
                id: hora_fin
                text: ''
                font_size: '20dp'
                halign: 'center'
                valign: 'middle'
                size_hint_y: None
                height: '40dp'
        
        BoxLayout:
            orientation: 'vertical'

            Label:
                id: actividad_label 
                size_hint_y: None
                height: 20  # Cambia la altura deseada aquí en píxeles
                pos_hint: {'center_x': 0.3, 'top': 0.8}
                font_size: '20dp'
                halign: 'center'

            Label:
                id: tiempo_transcurrido
                size_hint_y: None
                height: 170  # Cambia la altura deseada aquí en píxeles
                pos_hint: {'center_x': 0.3, 'top': 1}
                text: ''
                font_size: '20dp'
                halign: 'center'
                valign: 'middle'

